<div class="container">
  <div class="row head">
    <div class="col-md-12">
      <img class= "mypic" src="../assets/imgs/hamburger.gif" alt="">
      <h1 class= "title">Eat-da-Burger</h1>
    </div>

  </div>
</div>



<div class="container">
  <div class="row">
    <div class="col-md-6">
      <ol>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-eater eat=true}}
        {{/unless}}
        {{/each}}
      </ol>

    </div>

    <div class="col-md-6">
      <ol>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/eaten-burgers eat=false}}
        {{/if}}
        {{/each}}
      </ol>

    </div>

  </div>
</div>


<div class="container input-contain">
  <div class="row input-row">
    <div class="col-md-12">
      <form class="create-form">

        <div class="form-group">
          <label for="burg"></label>
          <input type="text" id="burg" name="name">
        </div>

        <button class= "button1" type="submit">Add Burger</button>
      </form>
      <p>Enter a burger you would wish to DESTROY!</p>
    </div>
  </div>
</div>

<audio id="my_audio" src="../assets/Ballin Flossin.mp3" loop="loop" type="audio/mp3"></audio>
